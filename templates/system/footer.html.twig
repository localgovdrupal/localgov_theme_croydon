<!-- FOOTER -->
<footer>
  {% if page.footer_first %}
  {{ page.footer_first }}
  {% endif %}

  <!-- Start footer top row wrapper -->
  <div class="container-fluid bg-carbon footer-top">
    <div class="row site-max">
      <div class="col-md-4 px-0 px-md-3">
        <section>
          <h2>Contact us</h2>
          <ul class="iconlist">
            <li>
              <p>Fastest way to get help is online</p>
            </li>
            <li class="mb-2">
              <i class="fas fa-envelope fa-fw" aria-hidden="true"></i>
              <a href="https://www.croydon.gov.uk/contact-us/message-us">Send us a message</a>
            </li>
            <li>
              <i class="fas fa-laptop fa-fw" aria-hidden="true"></i>
              <a href="https://www.croydon.gov.uk/contact-us/online">Other ways to contact us</a>
            </li>
          </ul>
          
          <ul class="socials">
            <li>
              <a href="https://twitter.com/intent/user?screen_name=yourcroydon">
              <i class="fab fa-twitter-square" aria-hidden="true"></i>
              <span class="visually-hidden">Follow us on Twitter</span>
              </a>
            </li>
            <li>
              <a href="https://www.facebook.com/ilovecroydon">
              <i class="fab fa-facebook-square" aria-hidden="true"></i>
              <span class="visually-hidden">Follow us on Facebook</span>
              </a>
            </li>
            <li>
              <a href="https://www.flickr.com/photos/yourcroydon/">
              <i class="fab fa-flickr" aria-hidden="true"></i>
              <span class="visually-hidden">Follow us on Flickr</span>
              </a>
            </li>
            <li>
              <a href="https://www.youtube.com/user/croydoncouncil/featured">
              <i class="fab fa-youtube-square" aria-hidden="true"></i>
              <span class="visually-hidden">Follow us on Youtube</span>
              </a>
            </li>
          </ul>

        </section>
      </div>
      <div class="col-md-4 px-0 px-md-3">
        <section>
          <h2>Our address</h2>
          <ul class="iconlist">
            <li>
              <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
              <span class="flex-break">
                <strong>Croydon Council</strong>
                <span class="flex-break">Bernard Weatherill House</span>
                <span class="flex-break">8 Mint Walk</span>
                <span class="flex-break">Croydon, CR0 1EA</span>
              </span>
            </li>
          </ul>
          <ul class="iconlist">
            <li>
              <i class="fas fa-exclamation-circle" aria-hidden="true"></i>
              <span class="flex-break">
                Due to Coronavirus (COVID-19) we are only open for emergency appointments
              </span>
            </li>
          </ul>
        </section>
      </div>
      <div class="col-md-4 px-0 px-md-3">
        <section>
          <h2>Accessibility</h2>
          <p>We are committed to making our website accessible to all visitors.</p>
          <p>Read our <a href="https://www.croydon.gov.uk/accessibility">accessibility statement</a></p>
        </section>
      </div>
    </div>
  </div>
  <!-- End footer top row wrapper -->
</footer>

