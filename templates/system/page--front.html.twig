{#
/**
* @file
* LocalGovDrupal theme implementation to display a single page.
*
* The doctype, html, head and body tags are not in this template. Instead they
* can be found in the html.html.twig template in this directory.
*
* Available variables:
*
* General utility variables:
* - base_path: The base URL path of the Drupal installation. Will usually be
*   "/" unless you have installed Drupal in a sub-directory.
* - is_front: A flag indicating if the current page is the front page.
* - logged_in: A flag indicating if the user is registered and signed in.
* - is_admin: A flag indicating if the user has permission to access
*   administration pages.
* - has_sidebar_first: Can we expect any content in the first sidebar?
* - has_sidebar_second: See above.
*
* Site identity:
* - front_page: The URL of the front page. Use this instead of base_path when
*   linking to the front page. This includes the language domain or prefix.
*
* Page content (in order of occurrence in the default page.html.twig):
* - messages: Status and error messages. Should be displayed prominently.
* - node: Fully loaded node, if there is an automatically-loaded node
*   associated with the page and the node ID is the second argument in the
*   page's path (e.g. node/12345 and node/12345/revisions, but not
*   comment/reply/12345).
*
* Regions:
* - page.header
* - page.search
* - page.mobile_search
* - page.primary_menu
* - page.secondary_menu
* - page.banner
* - page.breadcrumb
* - page.messages
* - page.content_top
* - page.content
* - page.content_bottom
* - page.sidebar_first
* - page.sidebar_second
* - page.footer_first
* - page.footer_second
* - page.disabled
* @see template_preprocess_page()
* @see html.html.twig
*
* @ingroup themeable
*/
#}
{%
  set content_classes = [
    has_sidebar_first and page.sidebar_second ? 'col-md-6',
    has_sidebar_first and not has_sidebar_second ? 'col-md-8',
    not has_sidebar_first and has_sidebar_second ? 'col-md-8',
    not has_sidebar_first and not has_sidebar_second ? 'col-md-12',
    'column',
    'main-content',
  ]
%}

{% block header %}
  {% include '@localgov_theme_croydon/system/header.html.twig' with {'page': page, 'border': true} %}
{% endblock %}

{% block unpublished_banner %}
  {% if unpublished_banner %}
    <div class="temp-alert-bar">
      <div class="temp-alert-bar--inner">
        <p>
          <span class="fas fa-exclamation-circle"></span>
          <span class="temp-alert-bar--text">This page is not published and should not be shared with the general public</span>
        </p>
      </div>
    </div>
  {% endif %}
{% endblock %}

<div class="jumbotron jumbotron-fluid banner-full home-1">
  <!--Full width jumbotron-->
  <div class="banner-full-tint h-100">
    <!--Tint placed over banner image-->
    <div class="container-fluid site-max h-100">
      <!--Container fluid and site max, set to height 100% of jumbotron container-->
      <div class="row align-items-center h-100">
        <!--Layout row set to 100% height of container-->
        <div class="col-12">
          <!--Column layout with contents centered horizontally-->
          <h1 class="text-center mb-3 px-5">Welcome to Croydon</h1>
          <!--H1 with margin bottom added, and padding right removed-->
          <form class="form-inline justify-content-center mb-4">
            <!--Form wrapper with margin bottom-->
            <input class="form-control col-sm-6 col-10" type="search" placeholder="Search croydon.gov.uk" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search croydon.gov.uk'" aria-label="Search">
            <!--Search field with responsive column settings, and placeholder settings-->
            <button class="btn btn-primary col-2 d-flex justify-content-between align-items-center" type="submit"><span class="d-none d-md-flex">Search</span><span class="fas fa-search d-flex" aria-label="Submit search"></span></button>
            <!--Button with column setting and custom CSS for icon only on mobile-->
          </form>
          <!--Form wrapper END-->
        </div>
        <!--Column layout END-->
      </div>
      <!--Layout row END -->
    </div>
    <!--Container fluid END-->
  </div>
  <!--Tint placed over banner image END-->
</div>

{% block sitewide_alert %}
 {{ sitewide_alert }}
{% endblock%}

{% block banner %}
  {% if page.banner %}
    {{ page.banner }}
  {% endif %}
{% endblock %}

<div class="container-fluid site-max bg-white homepage mt-4">
  <div{{ pageAttributes.addClass('row') }}>

    {{ page.messages }}

    {% block content %}

      {% if page.content_top %}
      <div class="col-sm-12">
        {{ page.content_top }}
      </div>
      {% endif %}

      {% if has_sidebar_first %}
        <div id="sidebar-first" class="column sidebar col-sm-4">
          <aside class="section" role="complementary">
            {{ page.sidebar_first }}
          </aside>
        </div>
      {% endif %}

      <main id="content" role="main"{{ content_attributes.addClass(content_classes) }}>
        <section class="section">
          <a id="main-content" tabindex="-1"></a>
          {{ page.content }}
        </section>
      </main>

      {% if has_sidebar_second %}
        <div id="sidebar-second" class="column sidebar col-sm-4">
          <aside class="section" role="complementary">
            {{ page.sidebar_second }}
          </aside>
        </div>
      {% endif %}

      {% if page.content_bottom %}
      <div class="col-sm-12">
        {{ page.content_bottom }}
      </div>
      {% endif %}
    {% endblock %}

  </div>
</div>

{% block footer %}
  {% include '@localgov_theme_croydon/system/footer.html.twig' with {'page': page, 'border': true} %}
{% endblock %}
